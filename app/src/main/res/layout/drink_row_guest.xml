<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="@dimen/drink_name_dimension"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/drink_name_text_view"
        android:text="@string/drink_name"/>

    <TextView
        android:layout_width="@dimen/drink_cost_dimension"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/drink_cost_text_view"
        android:text="@string/drink_cost"
        android:layout_toRightOf="@id/drink_name_text_view"/>

    <TextView
        android:layout_width="@dimen/drink_quantity_dimension"
        android:layout_height="wrap_content"
        android:id="@+id/drink_quantity_text_view"
        android:padding="10dp"
        android:text="@string/drink_quantity"
        android:layout_toRightOf="@id/drink_cost_text_view"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/buy_drink_button"
        android:text="@string/buy_drink"/>
</RelativeLayout>